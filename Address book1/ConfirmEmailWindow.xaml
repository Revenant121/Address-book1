<Window x:Class="Address_book1.ConfirmEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение почты" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите код из письма:" Margin="0,0,0,10"/>
            <TextBox Name="CodeTextBox" Height="30" />
            <Button Content="Подтвердить" Margin="0,10,0,0" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
