<Window x:Class="Address_book1.EditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать контакт" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <Image x:Name="PhotoPreview" Width="100" Height="100" Margin="0,0,0,10"/>
            <Button Content="Загрузить фото" Click="UploadPhoto_Click" Margin="0,0,0,10"/>

            <TextBox x:Name="FirstNameBox" Margin="0,0,0,10" Text="Имя"/>
            <TextBox x:Name="LastNameBox" Margin="0,0,0,10" Text="Фамилия"/>
            <TextBox x:Name="PhoneBox" Margin="0,0,0,10" Text="Телефон"/>
            <TextBox x:Name="AddressBox" Margin="0,0,0,10" Text="Адрес"/>
            <TextBox x:Name="CategoryBox" Margin="0,0,0,10" Text="Категория"/>


            <Button Content="Сохранить" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
