<Window x:Class="Address_book1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBox Name="UsernameBox" Text="Имя пользователя"
                     GotFocus="UsernameBox_GotFocus"
                     LostFocus="UsernameBox_LostFocus"/>

            <PasswordBox Name="PasswordBox"
                         GotFocus="PasswordBox_GotFocus"
                         LostFocus="PasswordBox_LostFocus"/>

            <Button Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
